CREATE TABLE users (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  email TEXT UNIQUE,
  password_hash TEXT,
  verified INTEGER DEFAULT 0,
  verification_code TEXT
);

CREATE TABLE communities (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  name TEXT UNIQUE,
  creator_id INTEGER
);

CREATE TABLE posts (
  id TEXT PRIMARY KEY,
  community TEXT,
  title TEXT,
  slug TEXT,
  author_id INTEGER
);
